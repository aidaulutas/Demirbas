@model List<DemirbasData.Model.Department>

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container">
        <a href="javascript:history.back()" class="btn btn-warning" style="border-radius: 50px;">
            <i class="fas fa-chevron-left"></i> Go Back
        </a>
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Department List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"></h3>
                        <a asp-controller="Department" asp-action="Create" class="btn btn-info"> <i class="fas fa-plus"></i>
                            <span>Create Department </span>
                        </a>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Department Name
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>

                                        <td>
                                            <a asp-controller="Department" asp-action="Update" asp-route-id="@item.Id" class="btn btn-info">
                                                <i class="fas fa-pencil-alt"></i>
                                                Update
                                            </a>

                                            <a asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                <i class="fas fa-trash"></i>
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->





