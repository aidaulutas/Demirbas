@model List<DemirbasData.Model.ItemType>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Item Type List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="ItemType" asp-action="Create" class="btn btn-primary ">
                <span>Create Item Type </span>
            </a>
        </div>
    </div>
    <div class="row">

        <table class="table table-bordered table table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>

                            <a asp-controller="ItemType" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
                                Update
                            </a>

                            <a asp-controller="ItemType" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                Delete
                            </a>
                        </td>

                    </tr>

                }


            </tbody>
        </table>
    </div>
</div>
