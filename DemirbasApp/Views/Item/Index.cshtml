@model List<DemirbasData.Model.Item>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Item List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary ">
                <span>Create Item </span>
            </a>
        </div>
    </div>
    <div class="row">

        <table class="table table-bordered table table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        User
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Serial Number
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        @if (item.UserId != null)
                        {
                            <td>@item.User.Name</td>
                        }
                        else
                        {
                            <td>Unassigned</td>
                        }
                        <td>@item.ItemType.Name</td>
                        <td>@item.SerialNumber</td>
                        <td>
                            <a asp-controller="Item" asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary">
                                Update
                            </a>

                            <a asp-controller="Item" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
