@model List<DemirbasData.Model.Item>

<div class="container">
    <div class="row">
        <div class="col-6">
            <h2>Unassigned Item List</h2>
        </div>
        
        </div>
    </div>
    <div class="row">

        <table class="table table-bordered table table-striped my-2">
            <thead>
                <tr>
                    <th>
                        Item Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        User
                    </th>
                    <th>
                        Type
                    </th>
                    <th>
                        Serial Number
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Description</td>
                        @if (item.UserId != null)
                        {
                            <td>@item.User.Name</td>
                        }
                        else
                        {
                            <td>Unassigned</td>
                        }
                        <td>@item.ItemType.Name</td>
                        <td>@item.SerialNumber</td>
                        <td>

                        <a asp-controller="Item" asp-action="AssignItem" asp-route-id="@item.Id" class="btn btn-primary">
                                Assign
                            </a>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
